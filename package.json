    "eslint-plugin-import": "^2.31.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "node-loader": "^2.0.0",
    "react-scripts": "5.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
