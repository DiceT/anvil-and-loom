{
  "name": "anvil-and-loom",
  "version": "0.1.0",
  "main": "src/main.js",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron-forge start\"",
    "react-start": "cd src/renderer && npm start",
    "package": "npm run react-build && electron-forge package",
    "make": "npm run react-build && electron-forge make",
    "react-build": "cd src/renderer && npm run build"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.0",
