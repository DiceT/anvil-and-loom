{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "ESNext", "ESNext.Disposable"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/renderer/**", "**/*.test.tsx", "**/*.test.ts"]  // Exclude renderer and all test files
}